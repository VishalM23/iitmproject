
int zeroint(mpint n)
{
    if(n.size==1 && n.sign==''&& n.word[0]==0)
        return 1;
    else
        return 0;
}

int positiveint(mpint n)
{
    if(n.sign=='+')
        return 1;
    else 
        return 0;
}

int negativeint(mpint n)
{
    if(n.sign=='-')
        return 1;
    else 
        return 0;
}

void destroyint(mpint*n)
{
free(n);
}
